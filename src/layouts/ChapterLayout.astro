---
import MainHead from "./MainHead.astro";
import Navigation from "../components/Navigation.astro";
import Search from "../components/Search.astro";
import ChapterFooter from "../components/ChapterFooter.astro";

const { frontmatter } = Astro.props;
---

<MainHead title={frontmatter.chapterTitle}>
    <Navigation/>
    <div class="flex justify-center py-2">
        <h1 class="font-bold uppercase text-4xl lg:text-8xl">
            {frontmatter.bookTitle}
        </h1>
    </div>
    
    <Search/>
    
    <div>
        <h2 class="font-bold mt-6 ml-8 mr-20 text-base lg:mt-14 lg:ml-80 lg:text-4xl">
            CAP√çTULO {frontmatter.chapterNumber}: {frontmatter.chapterTitle}
        </h2>
    </div>

    <hr class="h-px mb-3 mx-auto mx-5 my-2 bg-gray-400 border-0 lg:mx-80 lg:my-5 dark:bg-gray-400">
    
        <div class="lg:mx-96 px-10 space-y-4">
        <slot/>
    </div>

    <ChapterFooter bookTitle=`${frontmatter.bookTitle}`, chapterNumber=`${frontmatter.chapterNumber}`/>
</MainHead>