---
import MainHead from "./MainHead.astro";
import Navigation from "../components/Navigation.astro";

// const { title, bookTitle, chapterNumber, chapterTitle, capitulos } = Astro.props;
const { frontmatter } = Astro.props;
---

<MainHead title={frontmatter.chapterTitle} mode="dark">
    <Navigation/>
    <div class="flex justify-center text-center py-2 mb-2">
        <h1 class="font-bold uppercase text-4xl lg:text-8xl lg:m-5 text-center">
            <a href=`../${frontmatter.title}`>{frontmatter.bookTitle}</a>
        </h1>
    </div>
    
    <div>
        <h2 class="font-bold ml-8 mr-20 text-xl sm:text-2xl lg:ml-80 lg:text-4xl">
            {frontmatter.title}
        </h2>
        <p class="ml-8 mr-20 font-thin text-zinc-500 text-sm sm:text-base lg:text-lg lg:mt-6 lg:ml-80">
            {frontmatter.pubDate.split('T')[0]} â€¢ {frontmatter.author}
        </p>
    </div>

    <hr class="h-px mb-3 mx-5 my-2 bg-gray-400 border-0 lg:mx-80 lg:my-10 dark:bg-gray-400">
    
    <div class="max-w-4xl mx-auto px-5 lg:px-10 space-y-4 indent-8 leading-normal">
        <slot/>
    </div>

    <hr class="h-px mb-3 mx-5 my-2 bg-gray-300 border-0 lg:mx-80 lg:my-10 dark:bg-gray-400">
</MainHead>

