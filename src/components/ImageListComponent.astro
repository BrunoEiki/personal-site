---
import type { ImageMetadata } from 'astro';
import { Picture } from 'astro:assets';

interface Props {
    imagePath: string;
    altText: string;
}

const { imagePath, altText } = Astro.props;
const images = import.meta.glob<{ default: ImageMetadata }>('/src/images/**/*.{jpeg,jpg,png,gif}');
if (!images[imagePath]) throw new Error(`"${imagePath}" does not exist in glob: "src/assets/*.{jpeg,jpg,png,gif}"`);
---

<Picture src={images[imagePath]()} alt={altText} class="object-contain w-14 h-14 me-2 lg:w-20 lg:h-20"/>
